<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lands.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10,20">
            <Label Text="GAS DATA" 
                   FontSize="Large" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center">
                
            </Label>
            <Image
                Source="logogasdatacolor"
                >                
            </Image>
            <Label Text="E-Mail">
            </Label>

            <Entry 
                Keyboard="Email"
                Placeholder="Ingrese su Correo Electronico">                
            </Entry>

            <Label Text="Clave">
            </Label>

            <Entry 
                IsPassword="True"
                Placeholder="Ingrese su Contraseña">
            </Entry>

            <ActivityIndicator>
                
            </ActivityIndicator>

            <Button 
                BackgroundColor="Green"
                BorderRadius="23"
                Text="Ingresar"
                TextColor="White">
                
            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>